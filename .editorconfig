# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2

# Terraform/OpenTofu
[*.{tf,tfvars}]
indent_size = 2

# YAML files (Ansible, Kubernetes, etc.)
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Caddyfile - Use tabs with width 8
[Caddyfile]
indent_style = tab
indent_size = 8

# Makefile - Use tabs
[Makefile]
indent_style = tab
indent_size = 8

# JSON files
[*.json]
indent_size = 2

# Dockerfile
[Dockerfile]
indent_size = 4

# Configuration files
[*.{toml,ini,cfg}]
indent_size = 2
